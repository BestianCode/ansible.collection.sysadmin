#!/bin/bash

# Startup script
# Generated by Ansible

{% if startup_delay is defined and startup_delay > 0 %}
sleep {{ startup_delay }}
{% endif %}

{% if startup_scripts_to_run is defined and startup_scripts_to_run | length > 0 %}
### Execute startup scripts
{% for script in startup_scripts_to_run %}
if [ -x "{{ script }}" ]; then
    /bin/bash {{ script }}
fi
{% endfor %}

{% endif %}
{% if startup_extra_commands is defined and startup_extra_commands | length > 0 %}
### Additional startup commands
{% for cmd in startup_extra_commands %}
{{ cmd }}
{% endfor %}
{% endif %}
